{
  "name": "smart-markdown-links",
  "displayName": "Smart Markdown Links",
  "description": "Smart markdown link editing with inline display and click-to-edit functionality",
  "icon": "images/icon.png",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/marlonbernardes/smart-markdown-links.git"
  },
  "license": "MIT",
  "keywords": [
    "markdown",
    "links",
    "editor",
    "productivity",
    "documentation"
  ],
  "publisher": "marlonbernardes",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "markdown",
        "extensions": [".md", ".markdown"]
      }
    ],
    "commands": []
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run compile && vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "@vscode/vsce": "^2.21.0"
  }
}
